<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.efulltech.efulleatery">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.ItemsStock"></activity>
        <activity
            android:name=".activities.AllItems"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.MenuItemActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PaymentOptionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ChairsActivity"
            android:parentActivityName=".activities.RecyclerTable"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.CheckOutActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.ViewOrdersActivity" />
        <activity android:name=".activities.UploadStockActivity" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".activities.TableActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" /> <!-- <activity android:name=".LoginActivity"/> -->
        <activity
            android:name=".activities.RecyclerTable"
            android:label="Tables"
            android:parentActivityName=".activities.TableActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".WebViewActivity" />
        <activity android:name=".activities.TableActivity" />
        <activity
            android:name=".activities.MenuActivity"
            android:parentActivityName=".activities.RecyclerTable"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.TabbedActivity"
            android:label="Authenticate"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.OperateChoice"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>