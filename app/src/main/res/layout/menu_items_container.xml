<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#F5F5F5"
    android:gravity="center_vertical"
    android:minHeight="100dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="-50dp"
        app:cardElevation="6dp"
        >

        <ImageView
            android:id="@+id/items_image"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:src="@drawable/food2" />
    </android.support.v7.widget.CardView>

   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardCornerRadius="10dp"
       >


       <LinearLayout
           android:id="@+id/menu_items_container"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_gravity="center_vertical"
           android:gravity="right"
           android:orientation="vertical"
           android:paddingStart="100dp"
           android:paddingTop="10dp"
           android:paddingEnd="10dp"
           android:paddingBottom="10dp">

           <TextView
               android:id="@+id/food_name_items"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Sushi King"
               android:textSize="20sp"
               android:textStyle="bold"
               android:maxLines="1"
               android:ellipsize="end"
               />

           <TextView
               android:id="@+id/foodCategory"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Pizza, Sandwiches"
               android:textSize="10sp"
               />

           <TextView
               android:id="@+id/food_price_item"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Order price $13"
               android:textSize="15sp"
               />


       </LinearLayout>

   </android.support.v7.widget.CardView>


